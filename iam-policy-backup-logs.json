{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:CreateBucket"
            ],
            "Resource": [
                "arn:aws:s3:::backup-logs"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::backup-logs"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectTagging",
                "s3:DeleteObject",
                "s3:DeleteObjectTagging",
                "s3:GetObject",
                "s3:GetObjectTagging",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::backup-logs",
                "arn:aws:s3:::backup-logs/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketNotification",
                "s3:GetBucketPolicy",
                "s3:GetBucketVersioning",
                "s3:PutBucketNotification",
                "s3:PutBucketPolicy",
                "s3:PutLifecycleConfiguration",
                "s3:DeleteBucketPolicy",
                "s3:GetLifecycleConfiguration",
                "s3:PutBucketVersioning"
            ],
            "Resource": [
                "arn:aws:s3:::backup-logs"
            ]
        }
    ]
}
